<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Peminjaman.SendDataPeminjaman"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/btnBack"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp">

    </ImageView>

    <!-- Username -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Data Peminjaman"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/KodePinjamTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Kode Pinjam"
        app:hintTextColor="@color/Primary"
        app:layout_constraintBottom_toTopOf="@+id/nameInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/kodePinjamEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="435dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tanggalPinjamTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Tanggal Pinjam"
        app:layout_constraintBottom_toTopOf="@+id/passwordInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtField"
        android:layout_marginTop="@dimen/_4sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tanggalPinjamEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDatePicker"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="435dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tanggalPengembalianTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Tanggal Pengembalian"
        app:layout_constraintBottom_toTopOf="@+id/passwordInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtField"
        android:layout_marginTop="@dimen/_4sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tanggalPengembalianEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDatePicker2"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="435dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Place of Birth -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/kodeBukuTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="Kode Buku"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rePasswordInputLayout"
        app:layout_constraintBottom_toTopOf="@+id/tanggalLahirInputLayout"
        android:layout_marginTop="@dimen/_4sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/kodeBukuEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="435dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phone Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idMemberTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="ID Member"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanggalLahirInputLayout"
        android:layout_marginTop="@dimen/_4sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idMemberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="435dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAdd"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:textColor="@color/Primary"
            android:fontFamily="@font/poppins"
            android:text="@string/add_new"
            android:textSize="@dimen/_15ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUpdate"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:textColor="@color/Primary"
            android:fontFamily="@font/poppins"
            android:text="save"
            android:visibility="gone"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="259dp"
        android:layout_height="278dp"
        android:src="@drawable/register"
        android:layout_gravity="bottom|end"
         />

</LinearLayout>