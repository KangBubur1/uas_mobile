<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <ImageButton
            android:id="@+id/flowmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/image"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_more_vert"
            android:clickable="false"
            tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image"
            android:paddingStart="5dp"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ImageContrastCheck,RtlSymmetry" />

        <TextView
            android:id="@+id/txt_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_kodebuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/txt_pengarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_penerbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="90dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_tempatterbit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="110dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txt_jumlahsalinan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProduct"
            android:text="@string/app_name"
            android:layout_marginTop="130dp"
            android:layout_marginStart="20dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>